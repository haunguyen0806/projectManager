@model IEnumerable<Project_Manager.Models.Person>

<div class="main-content">
    <div class="page-header">
        <h2 class="header-title">CÔNG TY CP PVMĐ SÀI GÒN (SAGS)</h2>
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a href="#" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            </nav>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="row m-b-30">
                <div class="col-lg-8">
                    <div class="d-md-flex">
                        <div class="m-b-10 m-r-15">
                            <select class="custom-select" style="min-width: 180px;">
                                <option selected>Catergory</option>
                                <option value="all">All</option>
                                <option value="homeDeco">Home Decoration</option>
                                <option value="eletronic">Eletronic</option>
                                <option value="jewellery">Jewellery</option>
                            </select>
                        </div>
                        <div class="m-b-10">
                            <select class="custom-select" style="min-width: 180px;">
                                <option selected>Status</option>
                                <option value="all">All</option>
                                <option value="inStock">In Stock </option>
                                <option value="outOfStock">Out of Stock</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 text-right">
                    <a asp-controller="Person" asp-action="Create" class="btn btn-primary"><i class="anticon anticon-plus-circle m-r-5"></i>Add Person</a>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-hover e-commerce-table">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.FullName)</th>
                            <th>@Html.DisplayNameFor(model => model.JobTitle)</th>
                            <th>@Html.DisplayNameFor(model => model.MobilePhone)</th>
                            <th>@Html.DisplayNameFor(model => model.BusinessPhone)</th>
                            <th>Acton</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.JobTitle)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MobilePhone)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BusinessPhone)
                                </td>
                                <td class="text-right" style="min-width: 60px">
                                    <a asp-controller="Person" asp-action="Edit" asp-route-id="@item.PersonId" class="btn btn-icon btn-hover btn-sm btn-rounded pull-right"><i class="anticon anticon-edit"></i></a>
                                    <a asp-controller="Person" asp-action="Delete" asp-route-id="@item.PersonId" class="btn btn-icon btn-hover btn-sm btn-rounded"><i class="anticon anticon-delete"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
